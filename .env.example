// MomBoss WhatsApp Agent - Environment Configuration
// Copy this file to .env.local and fill in your values

# ============================================
# DATABASE (PostgreSQL - use Supabase, Neon, or local)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/momboss?schema=public"

# ============================================
# WORDPRESS / WOOCOMMERCE (momboss.space)
# ============================================
# Your MomBoss WordPress site URL (no trailing slash)
WORDPRESS_URL="https://momboss.space"

# WooCommerce REST API credentials
# Generate at: WordPress Admin > WooCommerce > Settings > Advanced > REST API
WOOCOMMERCE_CONSUMER_KEY="ck_your_consumer_key_here"
WOOCOMMERCE_CONSUMER_SECRET="cs_your_consumer_secret_here"

# WordPress Application Password (for non-WooCommerce endpoints like Dokan)
# Generate at: WordPress Admin > Users > Your Profile > Application Passwords
WORDPRESS_USERNAME="momboss"
WORDPRESS_APP_PASSWORD="your_application_password_here"

# WooCommerce Webhook Secret (for verifying incoming webhooks from WC)
# Set when creating webhooks in: WooCommerce > Settings > Advanced > Webhooks
WOOCOMMERCE_WEBHOOK_SECRET="your_webhook_secret_here"

# ============================================
# TWILIO (WhatsApp Business API)
# ============================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_auth_token_here"
# For sandbox testing: "whatsapp:+14155238886"
# For production: "whatsapp:+your_number"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# ============================================
# AI (OpenAI GPT)
# ============================================
OPENAI_API_KEY="sk-proj-your_key_here"
# Model to use for the agent
OPENAI_MODEL="gpt-4o"

# ============================================
# n8n INTEGRATION
# ============================================
# Secret for authenticating n8n webhook calls to our API
N8N_WEBHOOK_SECRET="generate-a-strong-random-secret-here"
# n8n instance URL (if self-hosted or cloud)
N8N_BASE_URL="https://your-n8n-instance.app.n8n.cloud"

# ============================================
# AUTH
# ============================================
JWT_SECRET="generate-a-strong-random-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin dashboard API secret — protects /api/admin/* routes
# Generate with: openssl rand -hex 32
ADMIN_API_SECRET="generate-a-strong-random-secret-here"

# ============================================
# APP CONFIG
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="MomBoss Agent"
NODE_ENV="development"

